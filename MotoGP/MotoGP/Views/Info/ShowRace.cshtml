@model MotoGP.Models.Race
@{
}
@{
    ViewData["BannerNr"] = 0;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pic = Model.RaceID + ".jpg";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> - MotoGP</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div>
        <h1 style="color:red">@Model.Name</h1>
        <h2>@(Html.DisplayFor(modelItem=>Model.Date)) - @Model.Country</h2>
        
        <img src="~/images/races/@pic" />
        <p>@Model.Description</p>
        <a asp-controller="Info" asp-action="ListRaces">Back</a>

        

    </div>

</body>
</html>