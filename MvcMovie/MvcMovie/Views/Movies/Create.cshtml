@model MvcMovie.Models.Movie;
@{
    ViewData["Title"] = "Create";
    var ratings = (IEnumerable < SelectListItem >) ViewData["Ratings"]!;
}

<form asp-action="Create">
    <label asp-for="Title">@(Html.DisplayNameFor(model => model.Title))</label>
    <input asp-for="Title" /> <br />

    <label asp-for="RatingID">@(Html.DisplayNameFor(model => model.RatingID))</label>
    <select asp-for="RatingID" asp-items="ratings"></select>

    <input type="submit" value="Create" />
</form>
<a asp-controller="Ratings" asp-action="List">Back to List</a>
